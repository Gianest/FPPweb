
<div class="container">
      <div class="btn-group btn-group" style="margin-top: 10%">
      <a class="btn btn-dark" href="./auth">Stasiun</a>
      <a class="btn btn-dark" id="kereta" href="/authka">Kereta</a>
      </div>
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="container" style="margin-top: 2%">
        <form class="form-inline" action="/ins"  method="POST" id="formlog">
        <input class="form-control mr-sm-2" type="text" placeholder="masukan data" name="insto" >
        <button type="submit" class="btn btn-dark" >INSERT</button>
        </form>
    </div>
<table class="table table-dark" id="mytable" style="margin-top: 2%">
      <thead>
        <tr>
          <th>Id Stasiun</th>
          <th>Nama Stasiun</th>
          <th>Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
         {{#each results}}
        <tr>
          <td>{{ id_stat }}</td>
          <td>{{ namstat }}</td>
          <td><a class="btn btn-sm btn-danger delete" href="/del/{{id_stat}}">Delete</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  <div class="row">
    <div class="col-sm">
    </div>
</div>
</div>


