
<div class="container">
      <div class="btn-group btn-group" style="margin-top: 10%">
      <a class="btn btn-dark" href="./auth">Stasiun</a>
      <a class="btn btn-dark" id="kereta" href="/authka">Kereta</a>
      </div>
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="container" style="margin-top: 2%">
        <form class="form-inline" action="/inska"  method="POST" id="formlog">
        <input class="form-control mr-sm-2" type="text" placeholder="ID Kereta" name="idka" >
        <input class="form-control mr-sm-2" type="text" placeholder="Nama KA" name="nmka" >
        <input class="form-control mr-sm-2" type="text" placeholder="Pemberhentian" name="stt" >
        <input class="form-control mr-sm-2" type="text" placeholder="Harga" name="hrg" >
        <button type="submit" class="btn btn-dark" >INSERT</button>
        </form>
    </div>
<table class="table table-dark" id="mytable" style="margin-top: 2%">
           <thead>
        <tr>
          <th>Id KA</th>
          <th>Nama KA</th>
          <th>Pemberhentian</th>
          <th>Harga</th>
          <th>Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
         {{#each results}}
        <tr>
          <td>{{ id_ka }}</td>
          <td>{{ namka }}</td>
          <td>{{ stasiun }}</td>
          <td>Rp. {{ harga }}</td>
          <td><a class="btn btn-sm btn-danger delete" href="/delka/{{id_ka}}">Delete</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  <div class="row">
    <div class="col-sm">
    </div>
</div>
</div>


